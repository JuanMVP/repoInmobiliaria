<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="Contenedor" parent="AppTheme">
        <item name="android:padding">@dimen/layout_contenedor_padding</item>
    </style>

    <style name="Contenedor.Detalle" parent="Contenedor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/layout_contenedor_padding</item>
    </style>

    <style name="spinner">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="botones" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_titulo</item>
        <item name="android:layout_marginLeft">@dimen/button_margin_h</item>
        <item name="android:layout_marginTop">@dimen/button_margin_v</item>
        <item name="android:paddingLeft">@dimen/button_padding_h</item>
        <item name="android:paddingRight">@dimen/button_padding_h</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
